<div class="container">
 <%= flash[:notice] %>
  <div class="row">
  <%= render 'users/lists', user:@user, book:@book, book_new:@book_new %>
  <div class="col-xs-9">
   <h2>Books</h2>
    <table class="table">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
    </thead>
      <% @books.each do |book| %>
     <tr>
       <td>
        <%=attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
       </td>
       <td>
       <%=link_to book.title, book_path(book.id) %>
       </td>
       <td>
       <%= book.body %>
       </td>
     </tr>
     <% end %>
   </table>
  </div>
 </div>
</div>