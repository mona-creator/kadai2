<div class="container">
  <div class="row">
    <%= render 'books/lists', book_new:@book,user:@user,book:@book %>
  <div class="col-xs-9">
   <h2>Books</h2>
    <table class="table">
     <thead>
      <tr>
       <th>image</th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
    </thead>
      <% @books.each do |book| %>
      <% @users.each do |user| %>
     <tr>
       <td>
        <%= link_to user_path(user.id) do %>
        <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
        <% end %>
       </td>
       <td>
       <%=link_to book.title, book_path(book) %>
       </td>
       <td>
       <%= book.body %>
       </td>
     </tr>
     <% end %>
    <% end %>
   </table>
  </div>
 </div>
</div>