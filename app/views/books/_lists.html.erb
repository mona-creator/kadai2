<div class="col-xs-3" >
      <h2>User info</h2>
       <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %>
          <table class="table">
           <tbody>
            <tr></tr>
             <tr>
              <th>name</th>
              <th><p class="profile-name"><%= user.name %></p></th>
             </tr>
             <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
             </tr>
           </tbody>
          </table>
         <div class="row">
           <div>
             <%= link_to"", edit_user_path(user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench " %>
           </div>
         </div>
        <h2>New book</h2>
        <%= render 'layouts/error_messages', book: book_new %>
        <%= form_for(book_new, url: books_path) do |f| %>
     <div class="field row">
      <div class="form-group">
       <label for="book_title">Title</label>
        <div class="col-xs-12">
         <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>
     </div>
     <div class="field row">
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
         <div class="col-xs-12">
          <%= f.text_area :body, class: 'form-control' %>
         </div>
      </div>
     </div>
     <div class="field row">
      <div class="form-group">
       <div class="col-xs-12 book_body">
        <%= f.submit 'Create Book', :class=>"btn btn-primary"%>
       </div>
      </div>
     </div>
    </div>
  <% end %>